{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    // "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2015",
    "downlevelIteration": true,
    "strict": false, // Disables strict type-checking options
    "noImplicitAny": false, // Allows expressions and declarations with an implied 'any' type
    "noImplicitReturns": false, // Do not error when not all code paths in function return a value
    "noImplicitThis": false, // Allow 'this' expressions with an implied 'any' type
    "noEmitOnError": false, // Do not emit outputs if any errors were reported.
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
